{
  "manifest_version": 3,
  "name": "Scout Bridge",
  "version": "0.1.0",
  "description": "Bidirectional communication bridge between Scout and the browser runtime",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
